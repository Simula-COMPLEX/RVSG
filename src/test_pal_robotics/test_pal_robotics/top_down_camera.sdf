<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="top_down_camera">
    <static>true</static>
    <link name="camera_link">
      <pose>0 0 0 0 0 0</pose>
      <visual name="visual">
        <geometry>
          <box>
            <size>0.1 0.1 0.1</size>
          </box>
        </geometry>
      </visual>

      <sensor name="top_down_camera_sensor" type="camera">
        <pose>0 0 0 0 1.51 0</pose>
        <always_on>true</always_on>
        <update_rate>10</update_rate>
        <camera>
          <horizontal_fov>0.98</horizontal_fov>
          <image>
            <width>1400</width>
            <height>1100</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
        <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
          <robotNamespace>/top_down</robotNamespace>
          <cameraName>top_down_camera</cameraName>
          <imageTopicName>image_raw</imageTopicName>
          <cameraInfoTopicName>camera_info</cameraInfoTopicName>
          <frameName>camera_link</frameName>
        </plugin>
      </sensor>
    </link>
  </model>
</sdf>
